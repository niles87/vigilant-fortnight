{{#if registered}}
<h2 class="flash-message">{{registered.msg}}</h2>
{{/if}}
{{#if failRegister}}
<h3 class="login-page-fail flash-message">{{failRegister.msg}}</h3>
{{/if}}
{{#if loginFail}}
<h3 class="login-page-fail flash-message">{{loginFail.msg}}</h3>
{{/if}}

<div class="form-container">

    <form id="login" action="api/v1/login" method="post">
        <h3>Login</h3>

        <input type="email" name="email" id="email" placeholder="Email" aria-placeholder="Email">

        <input type="password" name="password" id="password" placeholder="Password" aria-placeholder="Password">

        <button type="submit">Login</button>
    </form>

    <form id="signup" action="/api/v1/signup" method="post">
        <h3>Sign Up</h3>

        <input type="text" name="username" id="username" placeholder="Username" aria-placeholder="Username">

        <input type="email" name="email" id="signUpEmail" placeholder="Email" aria-placeholder="Email">

        <input type="password" name="password1" id="password1" placeholder="Password" aria-placeholder="Password">

        <input type="password" name="password2" id="password2" placeholder="Password" aria-placeholder="Password">

        <button type="submit">Sign Up</button>
    </form>

</div>